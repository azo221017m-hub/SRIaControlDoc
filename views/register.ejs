<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Registro - SRIa Control Documental</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f7f9;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    .register-container {
      background-color: white;
      padding: 30px 40px;
      border-radius: 8px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
      width: 360px;
    }
    h1 {
      margin-bottom: 25px;
      text-align: center;
      color: #004080;
    }
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
      color: #333;
    }
    input[type="text"],
    input[type="email"],
    input[type="number"] {
      width: 100%;
      padding: 10px;
      margin-bottom: 18px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 1rem;
    }

 input.invalid {
      border-color: red !important;
    }
    input.valid {
      border-color: green !important;
    }
    button {
      width: 100%;
      padding: 12px;
      background-color: #00a000;
      border: none;
      border-radius: 5px;
      color: white;
      font-weight: bold;
      font-size: 1.1rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    button:hover {
      background-color: #008000;
    }
    .errors {
      background-color: #ffe6e6;
      border: 1px solid #ff4d4d;
      color: #b30000;
      padding: 10px;
      margin-bottom: 20px;
      border-radius: 5px;
      font-size: 0.9rem;
      list-style-type: none;
    }
  </style>
</head>
<body>
  <div class="register-container">
    <h1>Registro de Usuario</h1>

    <% if (errors && errors.length > 0) { %>
      <ul class="errors">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>

<form action="/register" method="POST" novalidate>
      <label for="nombre">Nombre:</label>
      <input type="text" id="nombre" name="nombre" value="<%= old ? old.nombre : '' %>" required />

      <label for="correo">Correo:</label>
      <input type="email" id="correo" name="correo" value="<%= old ? old.correo : '' %>" required />

      <label for="empresa">Empresa:</label>
      <input type="text" id="empresa" name="empresa" value="<%= old ? old.empresa : '' %>" required />

      <label for="total_agentes">Total de Agentes:</label>
      <input type="number" id="total_agentes" name="total_agentes" min="1" value="<%= old ? old.total_agentes : '' %>" required />

      <button type="submit">Registrarse</button>
    </form>
  </div>


  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const inputs = document.querySelectorAll('input[required]');

      inputs.forEach(input => {
        function validate() {
          if (input.value.trim() === '') {
            input.classList.remove('valid');
            input.classList.add('invalid');
          } else {
            input.classList.remove('invalid');
            input.classList.add('valid');
          }
        }
        input.addEventListener('input', validate);
        input.addEventListener('blur', validate);
        // Validar al cargar la p√°gina para valores ya llenados
        validate();
      });
    });
  </script>

</body>
</html>
